<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/gray_background"
             android:fitsSystemWindows="true"
             tools:ignore="contentDescription">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login_bg"/>

    <LinearLayout
        android:id="@+id/authorization_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/size_large_72"
        android:layout_marginRight="@dimen/size_large_72"
        android:background="@drawable/auth_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_small_8"
            android:layout_marginRight="@dimen/spacing_medium_32"
            android:layout_marginTop="@dimen/spacing_medium_32"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="@dimen/spacing_small_4"
                android:layout_height="match_parent"
                android:background="@color/color_accent"/>
            <TextView
                android:id="@+id/auth_email_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_medium_28"
                android:fontFamily="sans-serif-medium"
                android:text="Регистрация"
                android:textColor="@color/color_accent"
                android:textSize="@dimen/typography_medium_20"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_medium_48"
            android:gravity="bottom"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:layout_marginLeft="@dimen/spacing_medium_28"
            android:layout_marginRight="@dimen/spacing_medium_28"
            android:layout_marginBottom="@dimen/spacing_small_8">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/auth_login_editText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/typography_regular_14"
                    android:hint="E-mail"
                    android:inputType="textEmailAddress"
                    android:text="mymail@mail.ru"/>

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_medium_48"
            android:gravity="bottom"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:layout_marginLeft="@dimen/spacing_medium_28"
            android:layout_marginRight="@dimen/spacing_medium_28"
            android:layout_marginBottom="@dimen/spacing_small_8">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/password_editText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/typography_regular_14"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:text="***********"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <android.support.v7.widget.ButtonBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_small_8"
            android:layout_marginLeft="@dimen/spacing_medium_28"
            android:layout_marginRight="@dimen/spacing_medium_28"
            android:layout_marginTop="@dimen/spacing_medium_28"
            android:gravity="center">

            <Button
                android:id="@+id/auth_enter_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_small_36"
                android:background="@drawable/auth_button_bg"
                android:text="Ввод"
                android:textColor="@color/white"/>

        </android.support.v7.widget.ButtonBarLayout>

        <TextView
            android:id="@+id/forgot_pass_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium_28"
            android:layout_marginLeft="@dimen/spacing_medium_28"
            android:layout_marginRight="@dimen/spacing_medium_28"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="Забыли пароль?"
            android:textColor="@color/light_gray"/>
    </LinearLayout>
</FrameLayout>
